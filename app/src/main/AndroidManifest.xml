<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.varadetask">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash"
        android:label="@string/app_name"
        android:logo="@drawable/download"
        android:roundIcon="@drawable/splash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAllNewsActivity"
            android:logo="@drawable/lo"
            android:roundIcon="@drawable/lo"
            android:label="ViewAllNews"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SportsActivity"
            android:label="Sports" />
        <activity
            android:name=".EntertainmentActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".NationalActivity"
            android:label="National"
            />
        <activity
            android:name=".InternationalActivity"
            />
        <activity android:name=".DetailsActivity"
            >

        </activity>
    </application>

</manifest>